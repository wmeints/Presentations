<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/reset.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/text.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/960.min.css")" rel="stylesheet" type="text/css" />
    <link href="http://fonts.googleapis.com/css?family=Ubuntu:bold" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Vollkorn" rel="stylesheet" type="text/css">
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="Stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>

<body>
    <div class="container_12 clearfix" id="navigation">
        <div class="grid_12">
            <ul id="user-navigation-menu">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li>@Html.ActionLink("Log on", "LogOn", new { controller = "Account" })</li>
                    <li>@Html.ActionLink("Register", "Register", new { controller = "Account" })</li>
                }
                else
                {
                    <li>@Html.ActionLink("Log off", "LogOff", new { controller = "Account" })</li>
                }
            </ul>
            
            <nav>
                <ul id="navigation-menu">
                    <li>@Html.ActionLink("Home","Index", new { controller = "Home" })</li>
                    <li><a href="#">Workshops</a></li>
                    <li>@Html.ActionLink("Members","Index", new { controller = "Members" })</li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="container_12 clearfix" id="header">
        <div class="grid_12" id="header-content">
            &nbsp;
        </div>
    </div>

    @RenderBody()

    <div class="container_12 clearfix" id="footer">
        <div class="grid_12" id="footer-content">
            Copyright Willem Meints, 2011. Pictures taken bij Jan Kramer.
        </div>
    </div>

    <script type="text/javascript" language="javascript">
        $(document).ready(function () {
            if (!Modernizr.date) {
                $(":input[type=date]").datepicker();
            }
        });
    </script>
</body>
</html>
